#version 430

layout( local_size_x = 1000 ) in;

layout(std430, binding=1) buffer Pos {
    vec4 Position[];
};

layout(std430, binding=2) buffer Vel {
    vec4 Velocity[];
};

void main() {
    uint idx = gl_GlobalInvocationID.x;

    Position[idx] = Position[idx]+0.01;
    Velocity[idx] = Velocity[idx];
}
